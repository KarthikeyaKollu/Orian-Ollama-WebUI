{
  "manifest_version": 3,
  "name": "Orian (Ollama WebUI)",
  "version": "1.2",
  "description": "Quick access to your favorite local LLM from your browser (Ollama).",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "commands": {
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Open side panel"
    }
  },
  "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "declarativeNetRequest",
    "system.cpu",
    "system.memory",
    "commands"
  ],
  "background": {
    "service_worker": "scripts/Background/background.js",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost:11434/api/tags",
    "http://localhost:11434/api/generate"
  ],
  "side_panel": {
    "default_path": "panel.html",
    "openPanelOnActionClick": true
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/WebUI/selection.js"
      ],
      "run_at": "document_end",
      "type": "module"
    },
    {
      "matches": [
        "https://www.google.com/*",
        "https://search.locker98.com/*"
      ],
      "js": [
        "lib/marked.min.js",
        "lib/prism.js",
        "scripts/WebUI/googleResultsComponent.js"
      ],
      "run_at": "document_end",
      "css": [
        "output.css",
        "css/prism.css",
        "css/light.css"
      ],
      "type": "module"
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "lib/marked.min.js",
        "scripts/WebUI/emailComponent.js"
      ],
      "run_at": "document_end",
      "css": [
        "output.css",
        "css/prism.css",
        "css/light.css"
      ],
      "type": "module"
    }
  ]
}